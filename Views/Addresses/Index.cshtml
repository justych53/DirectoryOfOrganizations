@model IEnumerable<DirectoryOrganizations.Models.Address>

<h2>Список адресов</h2>
<p><a asp-action="Create">Добавить адрес</a> </p>
<table class="table">
	<tr><th>ID</th><th>Расположение</th></tr>
	@foreach (var address in Model)
	{
		<tr>
			<td>@address.Id</td>
			<td>@address.Location</td>
			<td>
				<form asp-action="Edit" asp-controller="Addresses" method="get" asp-route-id="@address.Id">
					<input type="submit" value="Изменить" />
				</form>
			</td>
			<td>
				<form asp-controller="Addresses" asp-action="Delete" method="post" asp-route-id="@address.Id">
					<input type="submit" value="Удалить" />
				</form>
			</td>
		</tr>
	}
</table>
<form method="post" asp-controller="Addresses" asp-action="Back">
	<p>
		<input type="submit" value="Вернуться на главную" />
	</p>
</form>
